<% if @organisations.blank? %>
<p>There are no organisations currently in the system.</p>
<% else %>
<p>These are the current organisations in our system</p>
<ul id="organisations">
<% @organisations.each do |org| %>
<li><%= link_to org.name, {:action => 'show', :id => org.id} -%></li>
<% end %>
</ul>
<% end %>
<p><%= link_to "Add new Organisation", {:action => 'new' }%></p>
